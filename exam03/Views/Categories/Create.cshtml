@model exam03.Models.Category
@{
    ViewBag.Title = "Create";
}



<div class="row">
    <div class="col">
        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnComplete = "clearAll" }))
        {
            @Html.AntiForgeryToken();
            <h2 class="display-4 text-center ">Add New Field Category</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group row mt-5">
                @Html.LabelFor(x => x.CName, htmlAttributes: new { @class = "col-form-label col-2" })

                <div class="col-6">
                    @Html.EditorFor(x => x.CName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.CName, "", new { @class = "form-danger" })
                </div>
            </div>


            <div class="form-group row mt-3">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-outline-primary" id="btnCreate"><i class="fa fa-save"></i>Save</button>
                  

                    <div id="msg"></div>
                </div>
            </div>

        }
    </div>
</div>

<div>
    <a href="@Url.Action("Index","Categories")" class="btn btn-link text-decoration-none">BACK TO LIST</a>
</div>
@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

}
<script>
    $("#form0").attr("enctype", "multipart/form-data");
    function clearAll() {
        $("#form0").trigger("reset");
    }

</script>

